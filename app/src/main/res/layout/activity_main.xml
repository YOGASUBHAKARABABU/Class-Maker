<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"><![CDATA[
    android:orientation="vertical">











    ]]>

    <TextView
        android:text="  Choose who you are !!"
        android:layout_width="350dp"
        android:layout_height="40dp"
        android:id="@+id/textView13"
        android:textSize="20sp"
        android:elevation="0dp"
        android:textStyle="bold|italic"
        android:fontFamily="Times_New_Roman"
        android:textAllCaps="true"
        android:layout_marginBottom="17dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:text="Student"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:gravity="center_vertical|center"
        android:textSize="20sp"
        android:background="@android:color/background_dark"
        android:elevation="5dp"
        android:textStyle="bold|italic"
        android:fontFamily="Times_New_Roman"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/imageView6"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/layout_bg"
        android:id="@+id/imageView6"
        android:adjustViewBounds="false"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:elevation="0dp"
        android:background="@android:color/background_light"
        android:layout_marginBottom="148dp"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:text="Staff"
        android:layout_height="50dp"
        android:id="@+id/textView"
        android:layout_weight="0.50"
        android:gravity="center_vertical|center"
        android:textSize="20sp"
        android:layout_width="150dp"
        android:elevation="5dp"
        android:background="@android:color/background_dark"
        android:textStyle="bold|italic"
        android:fontFamily="Times_New_Roman"
        android:textAllCaps="true"
        android:textColor="@android:color/background_light"
        android:layout_above="@+id/imageView8"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:srcCompat="@drawable/layout_bg"
        android:id="@+id/imageView8"
        android:clickable="true"
        android:focusableInTouchMode="true"
        android:elevation="0dp"
        android:background="@android:color/background_light"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
